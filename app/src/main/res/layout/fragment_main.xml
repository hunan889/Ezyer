<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.niuan.common.ezyer.base.view.InfiniteBannerView
        android:id="@+id/main_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/customer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/customer_item_list_id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/customer_item_list_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/customer_products_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/customer_item_list_id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/customer_item_list_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/customer_products_2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"/>
</LinearLayout>